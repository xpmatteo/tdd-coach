<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h1 class="h4 mb-0">TDD Coach</h1>
            </div>
            <div class="card-body">
                <h2 class="h5 mb-3">Choose a Kata</h2>
                <p>Select a coding kata to practice Test-Driven Development with AI guidance.</p>
                
                <form id="kata-form" action="/session/new" method="get">
                    {{#each katas}}
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="kata" id="kata-{{key}}" value="{{key}}">
                        <label class="form-check-label" for="kata-{{key}}">
                            <strong>{{name}}</strong>
                            <div class="text-muted">{{description}}</div>
                        </label>
                    </div>
                    {{/each}}
                    
                    <button type="submit" class="btn btn-primary">Start Kata</button>
                </form>
            </div>
        </div>
    </div>
</div>